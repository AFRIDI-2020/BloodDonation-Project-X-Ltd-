<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp7Activity"
    android:paddingStart="@dimen/_40sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingEnd="@dimen/_40sdp"
    android:paddingBottom="@dimen/_10sdp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/blood_drop_icon"
        app:layout_constraintEnd_toEndOf="@id/app_title_layout"
        app:layout_constraintStart_toStartOf="@id/app_title_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/app_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon">

        <TextView
            android:id="@+id/blood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blood"
            android:textColor="@color/red"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toRightOf="@id/blood"
            android:text="@string/donation"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/page_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/how_old_are_you"
        android:textColor="@color/black"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/app_title_layout" />

    <TextView
        android:id="@+id/label_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="I am"
        android:textColor="@color/ash"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/page_caption"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:np_width="@dimen/_130sdp"
        app:np_height="@dimen/_40sdp"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="@dimen/_24sdp"
        app:np_textColor="@color/ash2"
        app:np_textSize="@dimen/_13sdp"
        app:np_wheelItemCount="10"
        app:np_orientation="horizontal"
        app:np_value="3"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/label_i_am"/>


    <TextView
        android:id="@+id/label_years_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Years Old"
        android:textColor="@color/ash"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_picker"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:np_width="@dimen/_130sdp"
        app:np_height="@dimen/_40sdp"
        app:np_max="31"
        app:np_min="1"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="@dimen/_24sdp"
        app:np_textColor="@color/ash2"
        app:np_textSize="@dimen/_13sdp"
        app:np_wheelItemCount="10"
        app:np_orientation="horizontal"
        app:np_value="15"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/label_years_old"/>


    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Date"
        android:textColor="@color/ash"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_picker2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/month_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:np_width="@dimen/_130sdp"
        app:np_height="@dimen/_40sdp"
        app:np_max="31"
        app:np_min="1"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="@dimen/_17sdp"
        app:np_textColor="@color/ash2"
        app:np_textSize="@dimen/_13sdp"
        app:np_wheelItemCount="5"
        app:np_orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/label_date"/>


    <TextView
        android:id="@+id/label_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="Month"
        android:textColor="@color/ash"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/month_picker"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/message_provide_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/correct_birthdate_give_you"
        android:textSize="@dimen/_14sdp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/label_month"
        />

    <Button
        android:id="@+id/btn_next7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/rec_round_button_on_pressed"
        android:clickable="true"
        android:elevation="@dimen/_30sdp"
        android:focusable="true"
        android:padding="@dimen/_12sdp"
        android:text="@string/next"
        android:onClick="goToSignUp8Activity"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/message_provide_identity"
        app:layout_constraintStart_toStartOf="@id/message_provide_identity"
        app:layout_constraintTop_toBottomOf="@id/message_provide_identity" />



</androidx.constraintlayout.widget.ConstraintLayout>